<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgMedisch"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/medisch" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imgMedisch"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNaam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categorie"
            android:textStyle="bold"
            android:textColor="#FFF"
            />

    </LinearLayout>
    <Button
        android:id="@+id/cmdPhoto"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/buttonlayoutclassicblue"
        android:text="Selecteer"
        android:textColor="#FFF"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />


</RelativeLayout>
